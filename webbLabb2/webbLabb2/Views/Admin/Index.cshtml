@{
    ViewData["Title"] = "Admin";

}
<!DOCTYPE html>

<html>
<body>
    <link rel="stylesheet" type="text/css" href="../../css/admin.css">

    <form method="post" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Index">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload a Json-file containing your articles </p>
                <input type="file" name="jsonFile" />
                <p>Upload any images referenced in your Json-file. They will be placed in the /images/ folder:</p>
                <input type="file" multiple="multiple" name="imageFiles" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>

</body>
</html>